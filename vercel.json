{
  "version": 2,
  "builds": [
    { "src": "src/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/src/$1" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)\\.(png|jpg|jpeg|gif|svg|webp|mp4|mp3)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
